                <input type="text" name="name" class="form-control" placeholder="Name" id="field-userName" required>
            </div>
            <div class="mb-3">
                <label for="field-email">Email</label>
                <input type="text" name="email" class="form-control" placeholder="Email" id="field-email" required>
            </div>
            <div class="mb-3">
                <label for="field-password">Password</label>
                <input type="password" name="password" class="form-control" placeholder="Password" id="field-password"
                       required>
            </div>
            <div class="mb-3">
                <label for="field-confirmPassword">Confirm Password</label>
                <input type="password" name="confirm-password" class="form-control" placeholder="Password"
                       id="field-confirmPassword" required>
            </div>
